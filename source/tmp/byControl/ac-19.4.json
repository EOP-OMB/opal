{
    "id": "ac-19.4",
    "class": "SP800-53-enhancement",
    "title": "Restrictions for Classified Information",
    "parameters": [
        {
            "id": "ac-19.4_prm_1",
            "label": "organization-defined security officials"
        },
        {
            "id": "ac-19.4_prm_2",
            "label": "organization-defined security policies"
        }
    ],
    "properties": [
        {
            "name": "label",
            "value": "AC-19(4)"
        },
        {
            "name": "sort-id",
            "value": "AC-19(04)"
        }
    ],
    "links": [
        {
            "href": "#cm-8",
