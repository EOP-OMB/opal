        {
            "id": "si-7.9",
            "class": "SP800-53-enhancement",
            "title": "Verify Boot Process",
            "parameters": [
                {
                    "id": "si-7.9_prm_1",
                    "label": "organization-defined system components"
                }
            ],
            "properties": [
                {
                    "name": "label",
